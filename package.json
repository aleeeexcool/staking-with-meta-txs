{
  "name": "Staking",
  "description": "",
  "version": "0.1.0",
  "scripts": {
    "clean": "shx rm -rf ./artifacts ./cache ./cache_hardhat ./coverage ./coverage.json ./types && yarn typechain",
    "compile": "TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && yarn typechain",
    "deploy-local": "yarn hardhat deploy --network localhost",
    "deploy": "yarn hardhat deploy --network polygon",
    "lint:sol": "yarn solhint \"{script,contracts,test}/**/*.sol\"",
    "networks": "hardhat networks",
    "prettier:write": "prettier --write \"**/*.{js,json,md,ts,yml}\"",
    "test": "hardhat test",
    "typechain": "TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "verify": "hardhat run scripts/verify.ts --network",
    "slither:checklist": "slither . --checklist --show-ignored-findings > SLITHER_CHECKLIST.md"
  },
  "devDependencies": {
    "@ethersproject/bignumber": "^5.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition": "^0.15.1",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.4",
    "@nomicfoundation/ignition-core": "^0.15.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.17",
    "chai": "4.4.1",
    "chalk": "4.1.2",
    "dotenv": "^16.4.4",
    "ethers": "6.11.0",
    "evm-bn": "^1.1.2",
    "hardhat": "2.21.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "1.0.10",
    "mocha": "^10.3.0",
    "prettier": "^3.2.5",
    "shx": "0.3.4",
    "solhint-community": "^3.7.0",
    "solidity-coverage": "0.8.11",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "license": "UNLICENSED",
  "packageManager": "yarn@4.1.0",
  "dependencies": {
    "@uniswap/permit2-sdk": "^1.3.0"
  }
}
